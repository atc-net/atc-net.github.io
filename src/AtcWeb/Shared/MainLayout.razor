@inherits LayoutComponentBase

<MudThemeProvider @ref="mudThemeProviderRef" Theme="@StateContainer.Theme" IsDarkMode="StateContainer.IsDarkMode" />
<MudPopoverProvider />
<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.ExtraSmall"
                   CloseButton="true"
                   Position="DialogPosition.Center" />
<MudSnackbarProvider />

<MudSwipeArea Class="full-page-height">
    <MudLayout>
        <MudAppBar Elevation="25">
            <MudIconButton Icon="@Icons.Material.Filled.Menu"
                           Color="Color.Inherit"
                           Edge="Edge.Start"
                           OnClick="@((_) => DrawerToggle())" />
            <MudText Typo="Typo.h5"
                     Class="atc-appbar-brand-text">
                ATC
            </MudText>
            <MudSpacer />
            <div class="d-none d-md-flex align-center">
                <MudMenu EndIcon="@Icons.Material.Filled.KeyboardArrowDown"
                         Label="Support"
                         Color="Color.Inherit"
                         Dense="true">
                    <MudText Typo="Typo.body2"
                             Class="px-4 py-2"><b>Maintenance</b></MudText>
                    <MudMenuItem Href="/support/repository-compliance-overview">Repository compliance overview</MudMenuItem>
                    <MudMenuItem Href="/support/api-rate-limits">GitHub API rate limits</MudMenuItem>
                </MudMenu>
                <MudDivider Vertical="true"
                            FlexItem="true"
                            DividerType="DividerType.Middle"
                            Class="mx-4 my-3"/>
                <MudTooltip Text="Toggle light/dark theme">
                    <MudIconButton Icon="@Icons.Material.Filled.Brightness4"
                                   Color="Color.Inherit"
                                   OnClick="@((_) => StateContainer.DarkModeToggle())" />
                </MudTooltip>
                <MudTooltip Text="GitHub repository">
                    <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
                                   Color="Color.Inherit"
                                   Href="https://github.com/atc-net/"
                                   Target="_blank" />
                </MudTooltip>
            </div>
            <MudMenu Icon="@Icons.Material.Filled.Settings"
                     Color="Color.Inherit"
                     Dense="true"
                     Class="d-md-none">
                <div class="px-2">
                    <MudIconButton Icon="@Icons.Material.Filled.Brightness4"
                                   Color="Color.Inherit"
                                   OnClick="@((_) => StateContainer.DarkModeToggle())" />
                    <MudIconButton Icon="@Icons.Custom.Brands.GitHub"
                                   Color="Color.Inherit"
                                   Href="https://github.com/atc-net/"
                                   Target="_blank" />
                </div>
                <MudText Typo="Typo.body2"
                         Class="px-4 py-2"><b>Community Support</b></MudText>
            </MudMenu>
        </MudAppBar>

        <MudDrawer @bind-Open=drawerOpen
                   Elevation="25"
                   Breakpoint="Breakpoint.Lg"
                   Class="atc-appbar-band">
            <MudDrawerHeader Class="atc-brand"
                             Style="margin: 20px auto 0"
                             LinkToIndex="true">
                @*<MudIcon></MudIcon>*@
                <img src="/images/atc-logo.svg" alt="ATC" />
            </MudDrawerHeader>
            <NavMenu @ref="@navMenuRef" />
        </MudDrawer>

        <div class="full-page-height">
            @Body
        </div>

        <MudScrollToTop TopOffset="400" Style="z-index:2000;">
            <MudFab StartIcon="@Icons.Material.Filled.KeyboardArrowUp"
                    Color="Color.Primary" />
        </MudScrollToTop>
    </MudLayout>
</MudSwipeArea>