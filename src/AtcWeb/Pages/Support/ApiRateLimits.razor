@page "/support/api-rate-limits"

@inherits ApiRateLimitsBase

<DocsPage MaxWidth="MaxWidth.Large">
    <DocsPageHeader Title="GitHub API rate limits"
                    SubTitle="This is the overview of GitHub API rate limits.">
    </DocsPageHeader>
    <DocsPageContent>
        @if (RateLimits is null)
        {
            <MudGrid Justify="Justify.Center">
                <MudProgressCircular Color="Color.Primary" Size="Size.Medium" Indeterminate="true" />
            </MudGrid>
        }
        else
        {
            <DocsPageSection>
                <SectionHeader Title="Rate limits" />
                <SectionContent AutoMarginContent="true" FullWidth="false">
                    <MudSimpleTable>
                        <thead>
                            <tr>
                                <th>Info</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    Rate limit
                                </td>
                                <td>
                                    @RateLimits.RestApi.RateLimit
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Remaining request count
                                </td>
                                <td>
                                    @RateLimits.RestApi.RemainingRequestCount
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Reset time
                                </td>
                                <td>
                                    @RateLimits.RestApi.RateLimitReset_DateTime
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Reset time remaining
                                </td>
                                <td>
                                    @RateLimits.RestApi.RateLimitReset_TimeRemaining.ToString("hh\\:mm\\:ss")
                                </td>
                            </tr>
                        </tbody>
                    </MudSimpleTable>
                </SectionContent>
            </DocsPageSection>
        }
    </DocsPageContent>
</DocsPage>