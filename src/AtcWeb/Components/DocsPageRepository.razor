@using AtcWeb.Domain.GitHub.Models
@using AtcWeb.Data

@inherits DocsPageRepositoryBase

<DocsPage MaxWidth="MaxWidth.Large">
    @if (Repository is null)
    {
        <MudGrid Justify="Justify.Center">
            <MudProgressCircular Color="Color.Primary"
                             Size="Size.Medium"
                             Indeterminate="true" />
        </MudGrid>
    }
    else
    {
        <DocsPageHeader Title="@Repository.BaseData.Name"
                    SubTitle="@Repository.BaseData.Description"></DocsPageHeader>
        <DocsPageContent>
            <DocsPageSection>
                <SectionHeader Title="Welcome" />
                <SectionContent AutoMarginContent="false"
                            FullWidth="true">
                    @ChildContent
                </SectionContent>
            </DocsPageSection>
            <DocsPageSection>
                <SectionHeader Title="Readme" />
                <SectionContent AutoMarginContent="false"
                            FullWidth="true">
                    <MudCard>
                        @if (Repository.Root.HasReadme)
                        {
                            <MudCardContent>
                                <MarkdownContent Content="@Repository.Root.RawReadme" />
                            </MudCardContent>
                        }
                        else
                        {
                            <MudCardContent>No content for readme!</MudCardContent>
                        }
                    </MudCard>
                </SectionContent>
            </DocsPageSection>
            <DocsPageSection>
                <SectionHeader Title="Responsible members" />
                <SectionContent FullWidth="true">
                    <MudList>
                        @foreach (var member in RepositoryMetadata.GetResponsibleMembersByName(Repository.Name))
                        {
                            <MudListItem Icon="@Icons.Filled.SupervisorAccount">@member</MudListItem>
                        }
                    </MudList>

                    @if (RepositoryMetadata.HasNotRequiredResponsibleMembersByName(Repository.Name))
                    {
                        <MudChip Color="Color.Error">
                            We are missing a member or too - to take some responsibility for this repository
                        </MudChip>
                    }
                </SectionContent>
            </DocsPageSection>
        </DocsPageContent>
    }
</DocsPage>